<Window x:Class="Minesweeper.Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Background="DarkSlateGray"
        WindowStyle="None"
        WindowState="Maximized"
        Closing="MainWindow_OnClosing"
        Loaded="MainWindow_OnLoaded">
    <StackPanel Orientation="Horizontal">
        <Grid Name="Grid"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              UseLayoutRounding="True"
              Height="700"
              Width="700"
              Margin="10,10,10,10"/>
        <StackPanel Orientation="Vertical" Margin="100,200,0,0" Name="InfoPanel">
            <Label Name="TimeLabel" Foreground="White" FontSize="40" />
            <Label Name="FlagLabel" Foreground="White" FontSize="40" />
        </StackPanel>
    </StackPanel>
</Window>
